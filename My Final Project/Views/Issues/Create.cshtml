@model My_Final_Project.Models.DTOs.CreateIssuesRequestModel

        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-9">

                    <h1 class="text-blue mb-4">Issues</h1>

                    <div class="card" style="border-radius: 15px;">
                        <form asp-action="Create" class="forms" enctype="multipart/form-data">

                            <div class="row align-items-center pt-4 pb-3">
                                <div class="col-md-3 ps-5">
                                    <h6 class="mb-0">Name</h6>
                                </div>
                                <div class="col-md-9 pe-5">
                                    <input type="text" class="form-control form-control-lg" name="Name" id="trans" />
                                </div>
                            </div>

                            <div class="row align-items-center pt-4 pb-3">
                                <div class="col-md-3 ps-5">
                                    <h6 class="mb-0">Description</h6>
                                </div>
                                <div class="col-md-9 pe-5">
                                    <input type="text" class="form-control form-control-lg" name="Description" id="trans" />
                                </div>
                            </div>

                            <div>
                                <input type="submit" value="Create" id="form-submit">
                            </div>

                        </form>
                    </div>





                </div>
            </div>
        </div>
































