@{
    ViewData["Title"] = "User Login";

}

<h5>LOGIN</h5>

</style>

<form asp-action="LogIn" method="post" class="forms" enctype="multipart/form-data">
    <div class="inputs">
        <div class="inp">
            <input type="email" name="email" id="trans" placeholder="Email adress" class="input-size">
        </div>

        <div class="inp">
            <input type="password" name="password" id="trans" placeholder="Password" class="input-size">
        </div>

        <div>
            <input type="submit" value="Login" id="form-submit">
        </div>
    </div>
</form>

<div class="down">
    <p>Don't have an account?</p>
    <a asp-controller="Client" asp-action="Create">
        <p>Register as a client</p>
    </a>
    <a asp-controller="Therapist" asp-action="Create">
        <p>Register as an therapist</p>
    </a>
</div>